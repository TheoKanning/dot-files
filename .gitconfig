[user]
	name = Aaron J. Zirbes
	email = aaron.zirbes@gmail.com
[core]
	excludesfile = /Users/azirbes/.gitignore_global
    editor = vim
[merge]
	tool = vimdiff
[diff]
	tool = vimdiff
[color]
	ui = true
[web]
	browser = macosx
[browser "macosx"]
	cmd = open
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[credential]
	helper = osxkeychain
[push]
	default = simple
[alias]
    l = log --graph
    ls = log --graph --stat
    ffs = flow feature start
    ffp = flow feature publish
    prud = pull --rebase upstream develop
    riud = rebase -i upstream/develop
    caa = commit -a --amend
    pf = push -f

[difftool]
	prompt = false
