[user]
	name = Aaron J. Zirbes
	email = aaron.zirbes@gmail.com
[core]
	excludesfile = /Users/azirbes/.gitignore_global
    editor = vim
[merge]
	tool = vimdiff
[diff]
	tool = vimdiff
[color]
	ui = true
[web]
	browser = macosx
[browser "macosx"]
	cmd = open
[credential]
	helper = osxkeychain
[push]
	default = simple
[alias]
    caa = commit -a --amend
    cd = checkout develop
    co = checkout
    dtud = difftool upstream/develop..HEAD --
    fa = fetch --all
    ffp = flow feature publish
    ffs = flow feature start
    l = log --relative --graph -n 20
    ls = log --relative --graph --stat -n 20
    pf = push -f
    prud = pull --rebase upstream develop
    riud = rebase -i upstream/develop
    s = status
[difftool]
	prompt = false
